        <Button x:Name="AddDrone" Content="Add new drone" HorizontalAlignment="Right" Height="40" Grid.Row="1" Margin="0,408,29,160" FontSize="16" Click="AddDrone_Click" FontWeight="Bold" Width="140"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Right" Height="40" Width="140" Grid.Row="1" Margin="0,465,29,103" FontSize="16" FontWeight="Bold" Click="CloseButton_Click" />
        <Button x:Name="RefreshButton" Content="Refresh List" HorizontalAlignment="Left" Height="40" Width="120" Grid.Row="1" Margin="678,15,0,553" FontSize="16" FontWeight="Bold" Click="RefreshButton_Click"  />
