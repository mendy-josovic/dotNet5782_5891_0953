<Window x:Class="PL.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CodeWindow" Height="200" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/Images/drone_sky.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Enter the code:" HorizontalAlignment="Left" Margin="56,0,0,15" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="CodeTextBox" HorizontalAlignment="Left" Margin="61,7,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="23"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="105,46,0,0" Grid.Row="1" VerticalAlignment="Top" Width="26" Click="OKButton_Click" />
    </Grid>
</Window>
